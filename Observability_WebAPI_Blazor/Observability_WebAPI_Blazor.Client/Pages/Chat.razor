@page "/chat"
@rendermode @(new InteractiveAutoRenderMode(prerender: true))
@using System.Diagnostics
@using Microsoft.AspNetCore.SignalR.Client
@inject NavigationManager Navigation
@inject ILogger<Chat> Logger
@implements IAsyncDisposable

<PageTitle>Chat</PageTitle>

<div class="form-group">
    <label>
        User:
        <input @bind="userInput" />
    </label>
</div>
<div class="form-group">
    <label>
        Message:
        <input @bind="messageInput" size="50" />
    </label>
</div>
<button @onclick="Send" disabled="@(!IsConnected)">Send</button>

<hr>

<ul id="messagesList">
    @foreach (var message in messages)
    {
        <li>@message</li>
    }
</ul>

@code {
    private HubConnection? hubConnection;
    private List<string> messages = [];
    private string? userInput;
    private string? messageInput;

    protected override async Task OnInitializedAsync()
    {
        var hubUri = GetHubUri();
        var traceId = IsProductionServer() ? $"TraceId: {GetTraceId()}" : string.Empty;

        hubConnection = new HubConnectionBuilder()
            .WithUrl(hubUri)
            .ConfigureLogging(logging =>
            {
                logging.SetMinimumLevel(LogLevel.Information);
            })
            .Build();

        hubConnection.On<string, string>("ReceiveMessage", (user, message) =>
        {
            var encodedMsg = $"{user}: {message}";
            messages.Add(encodedMsg);
            Logger.LogInformation(
                $"SignalR message received. User: {{User}}, MessageLength: {{MessageLength}} {traceId}",
                user,
                message?.Length ?? 0);
            InvokeAsync(StateHasChanged);
        });

        hubConnection.Closed += exception =>
        {
            if (exception is null)
            {
                Logger.LogInformation($"SignalR connection closed. {traceId}");
            }
            else
            {
                Logger.LogWarning(exception, $"SignalR connection closed with error. {traceId}");
            }

            return Task.CompletedTask;
        };

        try
        {
            Logger.LogInformation($"Hub url - {{HubUri}} {traceId}", hubUri);
            await hubConnection.StartAsync();
            Logger.LogInformation(
                $"SignalR connection started. ConnectionId: {{ConnectionId}} {traceId}",
                hubConnection.ConnectionId);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, $"SignalR connection failed to start. {traceId}");
            throw;
        }
    }

    private Uri GetHubUri()
    {
        const string hubPath = "/blazorChatHub";

        if (Environment.GetEnvironmentVariable("DOTNET_RUNNING_IN_CONTAINER") is "true")
        {
            return new Uri($"http://web:8080{hubPath}");
        }

        return Navigation.ToAbsoluteUri(hubPath);
    }

    private async Task Send()
    {
        if (hubConnection is not null)
        {
            await hubConnection.SendAsync("SendMessage", userInput, messageInput);
        }
    }

    public bool IsConnected =>
        hubConnection?.State == HubConnectionState.Connected;

    public async ValueTask DisposeAsync()
    {
        if (hubConnection is not null)
        {
            await hubConnection.DisposeAsync();
        }
    }

    private string GetTraceId()
    {
        if (Activity.Current is null)
        {
            return "Activity.Current is null.";
        }
        else
        {
            return Activity.Current.TraceId.ToString();
        }
    }

    private static bool IsProductionServer()
    {
        if (OperatingSystem.IsBrowser())
            return false;

        return Environment.GetEnvironmentVariable("ASPNETCORE_ENVIRONMENT") != "Development";
    }
}